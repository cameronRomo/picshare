<div id="<%= dom_id post %>">
  <p>
    <strong>User:</strong>
    <%= link_to post.user.username, user_path(post.user) %>
  </p>

  <p>
    <%= link_to image_tag(post&.image.url), post unless post.image.url == nil%>
  </p>

  <p>
    <strong>Caption:</strong>
    <%= post.caption %>
  </p>


</div>
