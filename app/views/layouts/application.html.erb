<!DOCTYPE html>
<html>
  <head>
    <title>Picshare</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "bulma" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar">
      <div class="navbar-brand navbar-menu">
        <h2 class="title navbar-item"><%= link_to "PicShare", root_path %></h2>
      <% if current_user %>
        <div class="navbar-end">
          <div class="navbar-item navbar-divider"><%= link_to current_user.username, current_user %></div>
          <div class="navbar-item navbar-divider"><%= link_to "Log Out", :logout %></div>
        </div>
      <% else %>
        <div class="navbar-item">
          <%= link_to "Log In", :login %>
        </div>
        <div class="navbar-item">
          <%= link_to "Sign Up", :signup %>
        </div>
      <% end %>
      </div>
    </nav>

    <p style="color: green"><%= notice %></p>
    <p id="alert"><%= alert %></p>
    
    <%= yield %>
    <p>
      <%= link_to "Back to Home", root_path %>
    </p>
  </body>
</html>
